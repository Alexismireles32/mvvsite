---
interface Props {
  title: string;
  subtitle: string;
  category: string;
  readTime: string;
  heroImage: string;
}

const { title, subtitle, category, readTime, heroImage } = Astro.props;
---

<!-- Blog Hero Header -->
<header class="relative overflow-hidden bg-gradient-to-br from-como to-[#3d6849] px-[5%] py-12 md:py-16 lg:py-20">
  <div class="container max-w-5xl mx-auto">
    <!-- Category & Read Time Badges -->
    <div class="mb-6 flex flex-wrap gap-3">
      <span class="rounded-full bg-white/20 backdrop-blur-sm px-6 py-2 text-sm font-semibold text-white border border-white/30">
        {category}
      </span>
      <span class="rounded-full bg-white/10 backdrop-blur-sm px-6 py-2 text-sm font-semibold text-white border border-white/30">
        ‚è± {readTime}
      </span>
    </div>

    <!-- Title -->
    <h1 class="mb-6 text-3xl font-bold leading-tight text-white xxs:text-4xl md:text-5xl lg:text-6xl">
      {title}
    </h1>

    <!-- Subtitle -->
    <p class="text-lg leading-relaxed text-white/90 md:text-xl">
      {subtitle}
    </p>
  </div>
</header>

<!-- Hero Image -->
<div class="px-[5%] -mt-8">
  <div class="container max-w-5xl mx-auto">
    <div class="overflow-hidden rounded-2xl shadow-2xl">
      <img
        src={heroImage}
        alt={title}
        class="aspect-video w-full object-cover"
        loading="eager"
      />
    </div>
  </div>
</div>

